            flex-wrap: wrap;
            gap: 8px;
        }

        aside .flex button {
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 9999px;
            background-color: #f0f0f0;
        }

        aside .space-y-4 li {
            margin-bottom: 16px;
        }

        aside .space-y-4 button {
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 9999px;
        }
    </style>
</head>

