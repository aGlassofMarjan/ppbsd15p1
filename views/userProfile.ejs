<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Â· Vritta</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Spectral:wght@200..800&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Lora:wght@400..700&display=swap');

        .logostyle {
            font-family: "Spectral", serif;
            font-weight: 700;
            font-size: 1.8rem;
            letter-spacing: -0.05em;
        }

        .lorafonts {
            font-family: "Lora", serif;
            font-style: normal;
        }

        .category-button {
            @apply flex-shrink-0 px-4 py-2 rounded-full bg-gray-200 text-sm whitespace-nowrap;
        }
    </style>
</head>

<body class="font-sans">
    <!-- Debugging -->
    <!-- <pre><%= JSON.stringify(user, null, 2) %></pre> -->
    <!-- <pre><%= JSON.stringify(post, null, 2) %></pre> -->

    <!-- Navbar -->
    <%- include('partials/nav', { user: user, post: post }) %>
    
    <div class="container mx-auto flex mt-4">
        <main class="w-2/3 p-4 ml-9 border-r border-gray-300">
            <div class="p-8 mb-9 border-b border-gray-300">
                <h1 class="text-6xl mb-5"><%= user.fullName %></h1>
            </div>

            <% if (post[0] && post[0].length > 0) { %>
                <% post[0].forEach(el => { %>
                    <%- include('partials/postCard', { el: el }) %>
                <% }) %>
            <% } else { %>
                <p>No posts available.</p>
            <% } %>

        </main>

        <aside class="w-1/3 p-4">
            <div class="sticky top-0">
                <img src="<%= post[0][0].profilePict %>" alt="Profile Picture" class="rounded-full mb-3 w-36 h-36">
                <h2 class="text-gray-800 text-lg font-semibold mb-1"><%= user.fullName %></h2>
                <p class="text-gray-500 font-normal mb-4"><%= user.nickName %> | <%= user.reversedDate %></p>

                <a href="/user/<%= user.id %>/profile/edit">
                    <button
                        class="bg-white px-3 py-1 rounded-full border border-black hover:bg-black hover:text-white">Edit
                        Profile</button>
                </a>

                <div>
                    <h2 class="font-semibold mt-12 mb-4">Temukan Author Lain</h2>
                    <ul class="space-y-4">
                        <li class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="bg-gray-300 w-8 h-8 rounded-full mr-3"></div>
                                <div>
                                    <h3 class="font-normal text-sm">Crypto Big Stories</h3>
                                    <p class="text-gray-500 text-xs">Bergabung pada 26 April 2024</p>
                                </div>
                            </div>
                            <button
                                class="bg-white text-black px-3 py-1 text-xs rounded border border-black hover:text-white hover:bg-black">Follow</button>
                        </li>
                        <li class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="bg-gray-300 w-8 h-8 rounded-full mr-3"></div>
                                <div>
                                    <h3 class="font-normal text-sm">Ignacio de Gregorio</h3>
                                    <p class="text-gray-500 text-xs">Bergabung pada 26 April 2024</p>
                                </div>
                            </div>
                            <button
                                class="bg-white text-black px-3 py-1 text-xs rounded border border-black hover:text-white hover:bg-black">Follow</button>
                        </li>
                        <li class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="bg-gray-300 w-8 h-8 rounded-full mr-3"></div>
                                <div>
                                    <h3 class="font-normal text-sm">Nikhil Vemu</h3>
                                    <p class="text-gray-500 text-xs">Bergabung pada 26 April 2024</p>
                                </div>
                            </div>
                            <button
                                class="bg-white text-black px-3 py-1 text-xs rounded border border-black hover:text-white hover:bg-black">Follow</button>
                        </li>
                    </ul>
                </div>

                <div class="mt-12">
                    <div class="flex flex-wrap gap-2 text-xs text-gray-600">
                        <button>Bantuan</button>
                        <button>Status</button>
                        <button>Tentang</button>
                        <button>Karir</button>
                        <button>Press</button>
                        <button>Blog</button>
                        <button>Keamanan</button>
                        <button>Syarat</button>
                        <button>Text to speech</button>
                        <button>Tim kami</button>
                    </div>
                </div>
            </div>
        </aside>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const dropdownToggle = document.getElementById('dropdownToggle');
            const dropdownMenu = document.getElementById('dropdownMenu');

            dropdownToggle.addEventListener('click', () => {
                dropdownMenu.classList.toggle('hidden');
            });

            window.addEventListener('click', (event) => {
                if (!event.target.matches('.dropdown-toggle')) {
                    dropdownMenu.classList.add('hidden');
                }
            });
        });
    </script>
</body>

</html>
